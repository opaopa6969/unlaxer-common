{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Calculator",
  "scopeName": "source.calculator",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#identifiers"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.calculator",
          "match": "//.*$"
        },
        {
          "name": "comment.block.calculator",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.calculator",
          "match": "\\b\\d+(?:\\.\\d+)?\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.calculator",
          "match": "[+\\-*/=]"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.calculator",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}